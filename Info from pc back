this.switchTab('record');

// Add a small delay to ensure tab switch completes
setTimeout(() => {
    if (observerNameInput) observerNameInput.focus();
    
    // Verify we're on the right tab
    const recordPanel = document.getElementById('record-panel');
    if (recordPanel && !recordPanel.classList.contains('active')) {
        console.error('Record panel is not active!');
        // Force activate it
        this.switchTab('record');
    }
}, 50);
